# Gmail API Configuration (Required)
GMAIL_CLIENT_ID=your-client-id-here.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-client-secret-here
GMAIL_REDIRECT_URI=http://localhost:8080

# Gemini API Configuration (Required)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_ENABLED=true

# Agent Settings
PRIORITY_THRESHOLD=70
MAX_EMAILS_TO_PROCESS=100

# Domain Configuration (comma-separated)
VIP_DOMAINS=example.com,vip-company.com
ALLOWED_DOMAINS=yourcompany.com,partner.com
BLOCKED_DOMAINS=spam.com,blocked.com

# DND Mode
DND_MODE=false
AUTO_RESPONDER=true

# Security Settings
REQUIRE_APPROVAL_FOR_EXTERNAL=true
ENABLE_PII_DETECTION=true
ENABLE_DOMAIN_RESTRICTIONS=true
ENABLE_TONE_ENFORCEMENT=true

# Slack Integration (Optional)
SLACK_ENABLED=false
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#email-agent

# Notion Integration (Optional)
NOTION_ENABLED=false
NOTION_TOKEN=secret_your-notion-integration-token
NOTION_DATABASE_ID=your-database-id-here

# Clarification & Reply-All Settings
MIN_INTENT_CONFIDENCE=0.6
MAX_RECIPIENTS_WARNING=5
MAX_EXTERNAL_RECIPIENTS=3
